<?xml version="1.0" encoding="ASCII"?>
<OCCI:Extension xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:OCCI="http://schemas.ogf.org/occi" xsi:schemaLocation="http://schemas.ogf.org/occi OCCI.ecore" name="OCCI Infrastructure">
  <kind term="entity" scheme="http://schemas.ogf.org/occi/core#" title="Entity type">
    <attribute name="occi.core.type" type="string" mutable="true"/>
  </kind>
  <kind term="resource" scheme="http://schemas.ogf.org/occi/core#" title="Resource type" parent="//@kind[term='entity']">
    <attribute name="occi.core.summary" type="string" mutable="true"/>
  </kind>
  <kind term="link" scheme="http://schemas.ogf.org/occi/core#" title="Link type" parent="//@kind[term='entity']"/>
  <kind term="network" scheme="http://schemas.ogf.org/occi/infrastructure#" title="Network type" parent="//@kind[term='resource']">
    <attribute name="occi.network.vlan" type="integer 0-4096" mutable="true"/>
    <attribute name="occi.network.label" type="Token" mutable="true"/>
    <attribute name="occi.network.state" type="enum {active, inactive}" required="true"/>
    <action term="up" scheme="http://schemas.ogf.org/occi/infrastructure/network/action#"/>
    <action term="down" scheme="http://schemas.ogf.org/occi/infrastructure/network/action#"/>
  </kind>
  <kind term="compute" scheme="http://schemas.ogf.org/occi/infrastructure#" title="Compute Resource" parent="//@kind[term='resource']">
    <attribute name="occi.compute.architecture" type="string" mutable="true" description="CPU Architecture"/>
    <attribute name="occi.compute.cores" type="integer" mutable="true" description="CPU cores number"/>
    <attribute name="occi.compute.hostname" type="string" mutable="true" description="System hostname"/>
    <attribute name="occi.compute.speed" type="float" mutable="true" description="CPU speed (GHz)"/>
    <attribute name="occi.compute.memory" type="float" mutable="true" description="System RAM (GB)"/>
    <attribute name="occi.compute.state" type="string" required="true" default="inactive" description="System state"/>
    <action term="start" scheme="http://schemas.ogf.org/occi/infrastructure/compute/action#" title="Start the system"/>
    <action term="stop" scheme="http://schemas.ogf.org/occi/infrastructure/compute/action#" title="Stop the system (graceful, acpioff or poweroff)">
      <attribute name="method" type="string"/>
    </action>
    <action term="restart" scheme="http://schemas.ogf.org/occi/infrastructure/compute/action#" title="Restart the system (graceful, warm or cold)">
      <attribute name="method" type="string"/>
    </action>
    <action term="suspend" scheme="http://schemas.ogf.org/occi/infrastructure/compute/action#" title="Suspend the system (hibernate or in RAM)">
      <attribute name="method" type="string"/>
    </action>
  </kind>
  <kind term="storage" scheme="http://schemas.ogf.org/occi/infrastructure#" title="Storage Resource" parent="//@kind[term='resource']">
    <attribute name="occi.storage.size" type="float" mutable="true" required="true" description="Storage size"/>
    <attribute name="occi.storage.state" type="string" mutable="true" required="true" description="Storage state"/>
    <action term="online" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Set storage online"/>
    <action term="offline" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Set storage offline"/>
    <action term="backup" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Set storage as backup"/>
    <action term="snapshot" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Take storage snapshot"/>
    <action term="resize" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Resize storage">
      <attribute name="size" type="float"/>
    </action>
  </kind>
  <kind term="storagelink" scheme="http://schemas.ogf.org/occi/infrastructure#" title="StorageLink Link" parent="//@kind[term='link']">
    <attribute name="occi.storagelink.deviceid" type="string" mutable="true" required="true"/>
    <attribute name="occi.storagelink.mountpoint" type="string" mutable="true"/>
    <attribute name="occi.storagelink.state" type="string" required="true"/>
  </kind>
  <kind term="networkinterface" scheme="http://schemas.ogf.org/occi/infrastructure#" title="NetworkInterface type" parent="//@kind[term='link']">
    <attribute name="occi.networkinterface.interface" type="string" required="true"/>
    <attribute name="occi.networkinterface.mac" type="string" mutable="true" required="true"/>
    <attribute name="occi.networkinterface.state" type="enum {active, inactive}" required="true"/>
  </kind>
  <mixin term="ipnetwork" scheme="http://schemas.ogf.org/occi/infrastructure/network#" title="IP Networking Mixin" applies="//@kind[term='network']">
    <attribute name="occi.network.address" type="string" mutable="true"/>
    <attribute name="occi.network.gateway" type="string" mutable="true"/>
    <attribute name="occi.network.allocation" type="string" mutable="true" required="true"/>
  </mixin>
  <mixin term="ipnetworkinterface" scheme="http://schemas.ogf.org/occi/infrastructure/networkinterface#" title="IP Network Interface Mixin" applies="//@kind[term='networkinterface']">
    <attribute name="occi.networkinterface.address" type="string" mutable="true" required="true"/>
    <attribute name="occi.networkinterface.gateway" type="string" mutable="true"/>
    <attribute name="occi.networkinterface.allocation" type="string" mutable="true" required="true"/>
  </mixin>
  <mixin term="os_tpl" scheme="http://schemas.ogf.org/occi/infrastructure#" title="OS Template" applies="//@kind[term='compute']"/>
  <mixin term="resource_tpl" scheme="http://schemas.ogf.org/occi/infrastructure#" title="Resource template" applies="//@kind[term='resource']"/>
</OCCI:Extension>
